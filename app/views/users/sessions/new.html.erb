
<div class="user-form soft-shadow">

	<h1>Sign in</h1>

	<%# Non sembra funzionare... %>
	<%= render "users/shared/error_messages", resource: resource %>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		
		<div>
			<div class="field">
				<%= f.label :email, style: "display: block;"  %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			</div>

			<div class="field">
				<%= f.label :password, style: "display: block;"  %>
				<%= f.password_field :password, autocomplete: "current-password" %>
			</div>

			<% if devise_mapping.rememberable? %>
				<div class="field user-remember-me" >
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me %>
				</div>
			<% end %>
		</div>

		<div class="actions">
			<%= button_tag 'Reset', type: 'reset', class: "btn-as-link-to-btn" %>
			<%= f.submit "Login", class: "btn-as-link-to-btn" %>
		</div>
		
	<% end %>

	<%= render "users/shared/links" %>

</div>

